<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.earthwallet">

    <!-- NFC Permissions -->
    <uses-permission android:name="android.permission.NFC" />
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <!-- Internet Permission for fetching CRLs and other data -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Camera Permission for capturing passport photo -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    
    <!-- Notification Permission for Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.EarthWallet"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">
        
        <activity
            android:name=".ui.host.HostActivity"
            android:exported="true"
            android:theme="@style/Theme.EarthWallet"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        


        
        
        <!-- Secret Execute Activity (headless, pure-native execution) -->
        <activity
            android:name=".bridge.activities.SecretExecuteActivity"
            android:exported="false"
            android:theme="@style/Theme.EarthWallet.NoDisplay"
            android:excludeFromRecents="true" />
        
        
        <!-- SNIP Execute Activity (headless, specialized SNIP-20/SNIP-721 executions using send message) -->
        <activity
            android:name=".bridge.activities.SnipExecuteActivity"
            android:exported="false"
            android:theme="@style/Theme.EarthWallet.NoDisplay"
            android:excludeFromRecents="true" />

        <!-- Multi-Message Execute Activity (headless, multi-message transactions like add liquidity) -->
        <activity
            android:name="com.example.earthwallet.bridge.activities.MultiMessageExecuteActivity"
            android:exported="false"
            android:theme="@style/Theme.EarthWallet.NoDisplay"
            android:excludeFromRecents="true" />

        <!-- ZXing Capture Activity with forced portrait orientation -->
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden"
            tools:replace="android:screenOrientation" />

    </application>

</manifest>