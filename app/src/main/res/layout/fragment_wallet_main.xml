<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="network.erth.wallet.ui.activities.WalletActivity">

    <ScrollView
        android:id="@+id/content_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/wallet_activity_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="32dp"
            android:paddingBottom="32dp"
            android:paddingHorizontal="24dp">

            <!-- Wallet Header -->
            <TextView
                android:id="@+id/wallet_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text=" "
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textColor="#333333"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp" />

            <!-- Portfolio Total Value -->
            <TextView
                android:id="@+id/portfolio_total_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textColor="#22C55E"
                android:visibility="gone" />

            <TextView
                android:id="@+id/portfolio_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Portfolio Value"
                android:textSize="14sp"
                android:textColor="#888888"
                android:visibility="gone" />

            <!-- Wallet Display Fragment Container -->
            <FrameLayout
                android:id="@+id/wallet_display_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Gas Balance Row (like a token) -->
            <LinearLayout
                android:id="@+id/gas_balance_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_gas_pump"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GAS"
                    android:textSize="18sp"
                    android:textColor="#333333" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/gas_balance_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="16sp"
                        android:textColor="#22C55E" />

                    <TextView
                        android:id="@+id/gas_balance_usd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="#888888" />

                </LinearLayout>

            </LinearLayout>

            <!-- Token Balances Fragment Container -->
            <FrameLayout
                android:id="@+id/token_balances_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
