<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Tokens"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1e3a8a"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Token Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Token"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/tokenSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/address_box_bg"
            android:layout_marginBottom="16dp" />

        <!-- Balance Display -->
        <TextView
            android:id="@+id/balanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance: Loading..."
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- Recipient Address -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipient Address"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/recipientEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="secret1..."
            android:textSize="14sp"
            android:background="@drawable/address_box_bg"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Amount -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/amountEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="0.0"
            android:inputType="numberDecimal"
            android:textSize="14sp"
            android:background="@drawable/address_box_bg"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Memo (Optional) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Memo (Optional)"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/memoEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter memo..."
            android:textSize="14sp"
            android:background="@drawable/address_box_bg"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Send Button -->
        <Button
            android:id="@+id/sendButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Send Tokens"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/green_button_bg"
            android:layout_marginBottom="16dp" />

        <!-- Warning Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚠️ Double-check the recipient address before sending. Transactions cannot be reversed."
            android:textSize="12sp"
            android:textColor="#ff6b35"
            android:background="#fff3e0"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>