<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

                <!-- Token Amount Input Group -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <!-- Label and Balance -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:id="@+id/token_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOKEN"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:text="SCRT" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/token_balance_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Balance: ..."
                                android:textColor="#333333"
                                android:textSize="14sp"
                                tools:text="Balance: 1,000.5" />

                            <Button
                                android:id="@+id/token_max_button"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/card_rounded_bg"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:padding="8dp"
                                android:text="Max"
                                android:textColor="@color/brand_blue"
                                android:textSize="12sp"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Input wrapper -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@color/desktop_bg"
                        android:padding="0dp">

                        <ImageView
                            android:id="@+id/token_input_logo"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:src="@drawable/ic_wallet"
                            tools:src="@drawable/ic_token_default" />

                        <EditText
                            android:id="@+id/token_amount_input"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="75dp"
                            android:layout_marginEnd="20dp"
                            android:background="@android:color/transparent"
                            android:hint="0.0"
                            android:textColorHint="#999999"
                            android:inputType="numberDecimal"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"
                            android:textColor="#333333"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="end"
                            tools:hint="Amount of SCRT" />

                    </RelativeLayout>

                </LinearLayout>

                <!-- ERTH Amount Input Group -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <!-- Label and Balance -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ERTH"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/erth_balance_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Balance: ..."
                                android:textColor="#333333"
                                android:textSize="14sp"
                                tools:text="Balance: 2,500.0" />

                            <Button
                                android:id="@+id/erth_max_button"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/card_rounded_bg"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:padding="8dp"
                                android:text="Max"
                                android:textColor="@color/brand_blue"
                                android:textSize="12sp"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Input wrapper -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@color/desktop_bg"
                        android:padding="0dp">

                        <ImageView
                            android:id="@+id/erth_input_logo"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:src="@drawable/ic_wallet"
                            tools:src="@drawable/ic_erth_logo" />

                        <EditText
                            android:id="@+id/erth_amount_input"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="75dp"
                            android:layout_marginEnd="20dp"
                            android:background="@android:color/transparent"
                            android:hint="0.0"
                            android:textColorHint="#999999"
                            android:inputType="numberDecimal"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"
                            android:textColor="#333333"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="end" />

                    </RelativeLayout>

                </LinearLayout>

                <!-- Add Liquidity Button -->
                <Button
                    android:id="@+id/add_liquidity_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#4caf50"
                    android:text="Add Liquidity"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

    </LinearLayout>

</ScrollView>