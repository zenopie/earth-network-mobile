<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/desktop_bg">


    <!-- Wallet Info Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_rounded_bg"
        android:padding="20dp"
        android:layout_marginBottom="16dp">

        <!-- Address Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textSize="14sp"
                android:textColor="@color/sidebar_text"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/addressText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Loading..."
                android:textSize="12sp"
                android:textColor="@color/wallet_row_address"
                android:maxLines="1"
                android:ellipsize="middle" />

        </LinearLayout>

        <!-- Balance Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCRT Balance:"
                android:textSize="14sp"
                android:textColor="@color/sidebar_text"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/balanceText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Loading..."
                android:textSize="14sp"
                android:textColor="@color/brand_blue"
                android:textStyle="bold" />

            <Button
                android:id="@+id/refreshBalanceBtn"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="âŸ²"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/brand_blue"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="2dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_gravity="top"
                android:layout_marginTop="-4dp" />

        </LinearLayout>

        <!-- QR Code Section (hidden for now) -->
        <ImageView
            android:id="@+id/qrCodeView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>