<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Error Icon -->
    <ImageView
        android:id="@+id/error_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/animated_crossmark"
        android:contentDescription="Scan Failed" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Scan Failed"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Reason Text -->
    <TextView
        android:id="@+id/failure_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="Failed to verify passport"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <!-- Details Text -->
    <TextView
        android:id="@+id/failure_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:text="Please try again or contact support if the problem persists."
        android:textColor="#CCFFFFFF"
        android:textSize="16sp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_back_to_anml"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/anml_button_background"
            android:text="Back to Menu"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>