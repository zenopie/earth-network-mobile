<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@android:color/white">

    <!-- Address Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">
        
        <!-- Address Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
        
        <!-- Address Display -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/desktop_bg"
            android:padding="0dp">

            <TextView
                android:id="@+id/addressText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Loading..."
                android:textSize="16sp"
                android:textColor="#333333"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="middle" />

        </RelativeLayout>

    </LinearLayout>
    
    <!-- Balance Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <!-- Balance Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCRT Balance"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/refreshBalanceBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/card_rounded_bg"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="6dp"
                android:src="@android:drawable/stat_notify_sync"
                android:contentDescription="Refresh balance"
                android:scaleType="fitCenter"
                android:tint="#333333" />

        </LinearLayout>
        
        <!-- Balance Display -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/desktop_bg"
            android:padding="0dp">

            <TextView
                android:id="@+id/balanceText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Loading..."
                android:textSize="20sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:gravity="center_vertical" />

        </RelativeLayout>

    </LinearLayout>

    <!-- QR Code Section (hidden for now) -->
    <ImageView
        android:id="@+id/qrCodeView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</LinearLayout>