<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pool_overview_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/pool_overview_box_normal"
    android:elevation="4dp"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Pool Pair Info Section -->
    <LinearLayout
        android:id="@+id/pool_pair_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/token_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerInside"
            tools:src="@drawable/ic_token_default" />

        <LinearLayout
            android:id="@+id/pool_token_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/token_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1a1a1a"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                tools:text="SCRT" />

            <TextView
                android:id="@+id/pair_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                tools:text="/ERTH" />

        </LinearLayout>

        <!-- Unbonding Lock Visualization -->
        <FrameLayout
            android:id="@+id/unbonding_lock"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="12dp"
            android:visibility="gone">

            <!-- Background circle -->
            <View
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/circle_unbonding_background" />

            <!-- Lock icon -->
            <ImageView
                android:id="@+id/lock_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_lock"
                android:tint="#4caf50" />

        </FrameLayout>

    </LinearLayout>

    <!-- Pool Stats Grid -->
    <LinearLayout
        android:id="@+id/pool_stats_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginBottom="20dp">

        <!-- Rewards Info -->
        <LinearLayout
            android:id="@+id/rewards_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rewards_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1a1a1a"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                tools:text="1.0K" />

            <TextView
                android:id="@+id/rewards_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rewards"
                android:textColor="#666666"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Liquidity Info -->
        <LinearLayout
            android:id="@+id/liquidity_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/liquidity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1a1a1a"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                tools:text="50.0K" />

            <TextView
                android:id="@+id/liquidity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liquidity"
                android:textColor="#666666"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Volume Info -->
        <LinearLayout
            android:id="@+id/volume_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/volume_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1a1a1a"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                tools:text="25.0K" />

            <TextView
                android:id="@+id/volume_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume"
                android:textColor="#666666"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- APR Info -->
        <LinearLayout
            android:id="@+id/apr_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/apr_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4caf50"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                tools:text="15.2%" />

            <TextView
                android:id="@+id/apr_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APR"
                android:textColor="#666666"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Pool Buttons Container -->
    <LinearLayout
        android:id="@+id/pool_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/claim_button"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_pool_claim"
            android:text="Claim"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/manage_button"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_pool_manage"
            android:text="Manage"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>