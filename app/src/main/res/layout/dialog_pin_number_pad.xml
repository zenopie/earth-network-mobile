<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Title and Message -->
    <TextView
        android:id="@+id/pin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Authenticate Transaction"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1e3a8a"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/pin_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your PIN to authorize this transaction"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- PIN Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/pin_dot_1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty"
            android:gravity="center" />

        <TextView
            android:id="@+id/pin_dot_2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty"
            android:gravity="center" />

        <TextView
            android:id="@+id/pin_dot_3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty"
            android:gravity="center" />

        <TextView
            android:id="@+id/pin_dot_4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty"
            android:gravity="center" />

        <TextView
            android:id="@+id/pin_dot_5"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty"
            android:gravity="center" />

        <TextView
            android:id="@+id/pin_dot_6"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty"
            android:gravity="center" />

    </LinearLayout>

    <!-- Number Pad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Row 1: 1, 2, 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:text="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/pin_button_bg"
                android:textColor="#333333" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:text="2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/pin_button_bg"
                android:textColor="#333333" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:text="3"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/pin_button_bg"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- Row 2: 4, 5, 6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:text="4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/pin_button_bg"
                android:textColor="#333333" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:text="5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/pin_button_bg"
                android:textColor="#333333" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:text="6"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/pin_button_bg"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- Row 3: 7, 8, 9 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:text="7"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/pin_button_bg"
                android:textColor="#333333" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:text="8"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/pin_button_bg"
                android:textColor="#333333" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:text="9"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/pin_button_bg"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- Row 4: -, 0, backspace -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp" />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/pin_button_bg"
                android:textColor="#333333" />

            <Button
                android:id="@+id/btn_backspace"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:text="âŒ«"
                android:textSize="18sp"
                android:background="@drawable/pin_button_bg"
                android:textColor="#666666" />

        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="#666666"
            android:textSize="14sp"
            android:background="@drawable/address_box_bg"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Confirm"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/green_button_bg"
            android:layout_marginStart="8dp"
            android:enabled="false" />

    </LinearLayout>

</LinearLayout>