<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sidebar_bg"
    tools:context="com.example.earthwallet.ui.activities.WalletActivity">

    <RelativeLayout
        android:id="@+id/wallet_activity_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/sidebar_bg">

        <ScrollView
            android:id="@+id/content_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Wallet Name Dropdown -->
                <LinearLayout
                    android:id="@+id/wallet_name_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/wallet_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Wallet"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/brand_blue"
                        android:gravity="center" />
                        
                    <TextView
                        android:id="@+id/wallet_dropdown_chevron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â–¼"
                        android:textSize="16sp"
                        android:textColor="@color/brand_blue"
                        android:layout_marginStart="8dp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Wallet Display Fragment Container -->
                <FrameLayout
                    android:id="@+id/wallet_display_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <!-- Token Balances Fragment Container -->
                <FrameLayout
                    android:id="@+id/token_balances_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <!-- Note -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/wallet_note"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</FrameLayout>