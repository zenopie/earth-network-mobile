<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="30dp">

    <!-- ERTH Stake Input Group -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <!-- Label and Balance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ERTH"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/stake_balance_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance: ..."
                    android:textColor="#333333"
                    android:textSize="14sp"
                    tools:text="Balance: 4,680.9" />

                <Button
                    android:id="@+id/stake_max_button"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/card_rounded_bg"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="Max"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:stateListAnimator="@null"
                    android:elevation="0dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- Input wrapper -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/desktop_bg"
            android:padding="0dp">

            <EditText
                android:id="@+id/stake_amount_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="0.0"
                android:textColorHint="#999999"
                android:inputType="numberDecimal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="end"
                tools:hint="Amount to stake" />

        </RelativeLayout>

    </LinearLayout>

    <!-- Stake Button -->
    <Button
        android:id="@+id/stake_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#4caf50"
        android:text="Stake"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:enabled="false" />

    <!-- Staked ERTH Unstake Input Group -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <!-- Label and Balance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STAKED ERTH"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/unstake_balance_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance: ..."
                    android:textColor="#333333"
                    android:textSize="14sp"
                    tools:text="Balance: 0.0" />

                <Button
                    android:id="@+id/unstake_max_button"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/card_rounded_bg"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="Max"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:stateListAnimator="@null"
                    android:elevation="0dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- Input wrapper -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/desktop_bg"
            android:padding="0dp">

            <EditText
                android:id="@+id/unstake_amount_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="0.0"
                android:textColorHint="#999999"
                android:inputType="numberDecimal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="end"
                tools:hint="Amount to unstake" />

        </RelativeLayout>

    </LinearLayout>

    <!-- Unstake Button -->
    <Button
        android:id="@+id/unstake_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#f57c00"
        android:text="Unstake"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:enabled="false" />

    <!-- Unbonding Note -->
    <TextView
        android:id="@+id/unbonding_note_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¡ Unstaking has a 21-day unbonding period"
        android:textSize="14sp"
        android:textColor="#FF8F00"
        android:background="#FFF3E0"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

</LinearLayout>

</ScrollView>