<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.earthwallet.ui.fragments.main.SwapTokensMainFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:text="Swap Tokens"
                    android:textColor="#333333"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- FROM Token Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <!-- Label row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <!-- Balance/Viewing Key Section -->
                        <LinearLayout
                            android:id="@+id/from_balance_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/from_balance_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Balance: ..."
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <Button
                                android:id="@+id/from_max_button"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/card_rounded_bg"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:padding="8dp"
                                android:text="Max"
                                android:textColor="@color/brand_blue"
                                android:textSize="12sp"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/from_viewing_key_button"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/card_rounded_bg"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:text="Get Viewing Key"
                                android:textColor="@color/brand_blue"
                                android:textSize="11sp"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Input wrapper -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@color/desktop_bg"
                        android:padding="0dp">

                        <ImageView
                            android:id="@+id/from_token_logo"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:src="@drawable/ic_wallet" />

                        <Spinner
                            android:id="@+id/from_token_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:background="@android:color/transparent" />

                        <EditText
                            android:id="@+id/from_amount_input"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="75dp"
                            android:layout_marginEnd="120dp"
                            android:background="@android:color/transparent"
                            android:hint="0.0"
                            android:textColorHint="#999999"
                            android:inputType="numberDecimal"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"
                            android:textColor="#333333"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

                <!-- Toggle button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="8dp">

                    <ImageButton
                        android:id="@+id/toggle_button"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/toggle_button_bg"
                        android:src="@android:drawable/stat_notify_sync"
                        android:contentDescription="Toggle swap direction"
                        android:scaleType="fitCenter"
                        android:padding="8dp"
                        android:tint="#000000" />

                </LinearLayout>

                <!-- TO Token Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <!-- Label row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <!-- Balance/Viewing Key Section -->
                        <LinearLayout
                            android:id="@+id/to_balance_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/to_balance_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Balance: ..."
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <Button
                                android:id="@+id/to_viewing_key_button"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/card_rounded_bg"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:text="Get Viewing Key"
                                android:textColor="@color/brand_blue"
                                android:textSize="11sp"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Input wrapper -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@color/desktop_bg"
                        android:padding="0dp">

                        <ImageView
                            android:id="@+id/to_token_logo"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:src="@drawable/ic_wallet" />

                        <Spinner
                            android:id="@+id/to_token_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:background="@android:color/transparent" />

                        <EditText
                            android:id="@+id/to_amount_input"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="75dp"
                            android:layout_marginEnd="120dp"
                            android:background="@android:color/transparent"
                            android:enabled="false"
                            android:hint="0.0"
                            android:textColorHint="#999999"
                            android:inputType="numberDecimal"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"
                            android:textColor="#333333"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

                <!-- Swap Button -->
                <Button
                    android:id="@+id/swap_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#4caf50"
                    android:enabled="false"
                    android:text="Swap"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Details Toggle -->
                <Button
                    android:id="@+id/details_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:text="Show Details ▼"
                    android:textColor="#4caf50"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <!-- Details Section -->
                <LinearLayout
                    android:id="@+id/details_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/desktop_bg"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <!-- Rate -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rate:"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/rate_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#999999"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Minimum Received -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minimum received:"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/min_received_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#999999"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Slippage Tolerance -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Slippage Tolerance:"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <EditText
                                android:id="@+id/slippage_input"
                                android:layout_width="60dp"
                                android:layout_height="32dp"
                                android:background="@drawable/card_rounded_bg"
                                android:gravity="center"
                                android:inputType="numberDecimal"
                                android:text="1"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="%"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>