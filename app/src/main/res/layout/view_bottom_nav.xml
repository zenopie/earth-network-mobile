<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_nav"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingVertical="8dp">

    <!-- Wallet Tab -->
    <LinearLayout
        android:id="@+id/btn_nav_wallet"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/nav_item_selector"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp">

        <ImageView
            android:id="@+id/nav_wallet_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_wallet"
            android:tint="#9E9E9E" />

        <TextView
            android:id="@+id/nav_wallet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Actions Tab -->
    <LinearLayout
        android:id="@+id/btn_nav_actions"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/nav_item_selector"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp">

        <ImageView
            android:id="@+id/nav_actions_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_swap_horizontal"
            android:tint="#9E9E9E" />

        <TextView
            android:id="@+id/nav_actions_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actions"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Settings Tab -->
    <LinearLayout
        android:id="@+id/btn_nav_settings"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/nav_item_selector"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp">

        <ImageView
            android:id="@+id/nav_settings_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_gear"
            android:tint="#9E9E9E" />

        <TextView
            android:id="@+id/nav_settings_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</LinearLayout>
