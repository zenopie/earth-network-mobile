<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Tokens"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1e3a8a"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Token Selection Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="vertical">

            <!-- Label row with balance -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Token"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/balanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance: Loading..."
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Token Selection Input -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/desktop_bg"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/tokenLogo"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_local_gas_station" />

                <Spinner
                    android:id="@+id/tokenSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:popupBackground="@android:color/white" />

                <EditText
                    android:id="@+id/amountEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="75dp"
                    android:layout_marginEnd="120dp"
                    android:background="@android:color/transparent"
                    android:hint="0.0"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Recipient Address -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipient Address"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/recipientEditText"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="secret1... or select wallet below"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textColorHint="#666666"
                android:background="@drawable/address_box_bg"
                android:padding="12dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/clearRecipientButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="✕"
                android:textColor="#666666"
                android:textSize="16sp"
                android:background="@drawable/address_box_bg"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or select recipient method:"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/pickWalletButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="👛\nWallet"
                android:textColor="#333333"
                android:textSize="12sp"
                android:background="@drawable/address_box_bg"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/scanQrButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="📷\nScan QR"
                android:textColor="#333333"
                android:textSize="12sp"
                android:background="@drawable/address_box_bg"
                android:gravity="center"
                android:layout_marginStart="8dp" />

        </LinearLayout>


        <!-- Memo Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Memo (Optional)"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Memo Input -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/desktop_bg"
                android:padding="0dp">

                <EditText
                    android:id="@+id/memoEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@android:color/transparent"
                    android:hint="Enter memo..."
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="16sp" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Send Button -->
        <Button
            android:id="@+id/sendButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Send Tokens"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/green_button_bg"
            android:layout_marginBottom="16dp" />

        <!-- Warning Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚠️ Double-check the recipient address before sending. Transactions cannot be reversed."
            android:textSize="12sp"
            android:textColor="#ff6b35"
            android:background="#fff3e0"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>