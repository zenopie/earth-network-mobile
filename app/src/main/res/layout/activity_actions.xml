<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sidebar_bg"
    tools:context=".ActionsActivity">

    <!-- Top logo section (matches desktop sidebar logo placement) -->
    <LinearLayout
        android:id="@+id/logo_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="36dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/action_logo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/logo"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <!-- Actions list styled like the desktop sidebar -->
    <ScrollView
        android:id="@+id/actions_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logo_section"
        android:layout_marginBottom="56dp"
        android:fillViewport="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Passport Scan action (keeps existing behavior but restyled) -->
            <Button
                android:id="@+id/btn_passport_scan"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:backgroundTint="@color/sidebar_bg"
                android:drawableLeft="@drawable/ic_nfc"
                android:drawablePadding="12dp"
                android:text="@string/passport_scan"
                android:textColor="@color/sidebar_text"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:stateListAnimator="@null" />

            <!-- ANML Claim action -->
            <Button
                android:id="@+id/btn_anml_claim"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:backgroundTint="@color/sidebar_bg"
                android:drawableLeft="@drawable/ic_launcher_foreground"
                android:drawablePadding="12dp"
                android:text="ANML Claim"
                android:textColor="@color/sidebar_text"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:stateListAnimator="@null" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/sidebar_divider" />

            <!-- Additional descriptive area (optional) -->
            <TextView
                android:id="@+id/actions_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select an action from above"
                android:textColor="@color/sidebar_text"
                android:textSize="14sp"
                android:paddingBottom="24dp" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>