<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed / hover -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/sidebar_hover" />
            <stroke android:width="5dp" android:color="@color/anml_button_border" />
            <corners android:radius="30dp" />
            <padding android:left="20dp" android:top="5dp" android:right="20dp" android:bottom="5dp" />
            <size android:height="56dp" />
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/sidebar_bg" />
            <stroke android:width="5dp" android:color="@color/anml_button_border" />
            <corners android:radius="30dp" />
            <padding android:left="20dp" android:top="5dp" android:right="20dp" android:bottom="5dp" />
            <size android:height="56dp" />
        </shape>
    </item>
</selector>