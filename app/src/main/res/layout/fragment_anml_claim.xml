<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/claim_anml_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/anml"
        android:contentDescription="@string/passport_scan"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:importantForAccessibility="yes" />

    <!-- Price Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current ANML Price"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/anml_price_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333" />

    </LinearLayout>

    <!-- Ad-Free Status Indicator -->
    <LinearLayout
        android:id="@+id/ad_free_indicator_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/status_pill_bg"
        android:visibility="visible">

        <TextView
            android:id="@+id/ad_free_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#22C55E" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_claim"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_claim_green"
        android:backgroundTint="@null"
        android:text="Claim ANML"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:stateListAnimator="@null" />
</LinearLayout>
