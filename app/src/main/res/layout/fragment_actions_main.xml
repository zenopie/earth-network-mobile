<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sidebar_bg">

    <!-- Top logo section (matches desktop sidebar logo placement) -->
    <LinearLayout
        android:id="@+id/logo_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="36dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/action_logo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/logo"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <!-- Actions list styled like the desktop sidebar -->
    <ScrollView
        android:id="@+id/actions_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logo_section"
        android:fillViewport="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- ANML Claim action -->
            <Button
                android:id="@+id/btn_anml_claim"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:backgroundTint="@color/sidebar_bg"
                android:text="ANML Claim"
                android:textColor="@color/sidebar_text"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:stateListAnimator="@null" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/sidebar_divider" />

            <!-- Swap Tokens action -->
            <Button
                android:id="@+id/btn_swap_tokens"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:backgroundTint="@color/sidebar_bg"
                android:text="Swap Tokens"
                android:textColor="@color/sidebar_text"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:stateListAnimator="@null" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/sidebar_divider" />

            <!-- Manage LP action -->
            <Button
                android:id="@+id/btn_manage_lp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:backgroundTint="@color/sidebar_bg"
                android:text="Manage LP"
                android:textColor="@color/sidebar_text"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:stateListAnimator="@null" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/sidebar_divider" />

            <!-- Stake ERTH action -->
            <Button
                android:id="@+id/btn_stake_erth"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:backgroundTint="@color/sidebar_bg"
                android:text="Stake ERTH"
                android:textColor="@color/sidebar_text"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:stateListAnimator="@null" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/sidebar_divider" />

            <!-- Additional descriptive area (optional) -->

        </LinearLayout>
    </ScrollView>

</RelativeLayout>