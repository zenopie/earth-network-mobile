<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@android:color/white">

    <!-- Horizon Container -->
    <RelativeLayout
        android:id="@+id/horizon_container"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_marginBottom="32dp">

        <!-- Shadow Area (elliptical shadow) -->
        <View
            android:id="@+id/shadow_area"
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shadow_oval" />

        <!-- Food Emoji -->
        <TextView
            android:id="@+id/food_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/shadow_area"
            android:layout_marginBottom="16dp"
            android:textSize="72sp"
            android:text="ðŸŽ" />

    </RelativeLayout>

    <!-- Success Message -->
    <TextView
        android:id="@+id/success_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Claimed!"
        android:textColor="#333333"
        android:textSize="24sp"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See you tomorrow"
        android:textColor="#888888"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp" />

</LinearLayout>
