<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- FROM Token Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <!-- Label row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <!-- Balance/Viewing Key Section -->
                    <LinearLayout
                        android:id="@+id/from_balance_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/from_balance_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance: ..."
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <include
                            layout="@layout/component_small_action_button"
                            android:id="@+id/from_max_button" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Input wrapper -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/desktop_bg"
                    android:padding="0dp">

                    <ImageView
                        android:id="@+id/from_token_logo"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/ic_wallet" />

                    <Spinner
                        android:id="@+id/from_token_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:background="@android:color/transparent" />

                    <EditText
                        android:id="@+id/from_amount_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="75dp"
                        android:layout_marginEnd="120dp"
                        android:background="@android:color/transparent"
                        android:hint="0.0"
                        android:textColorHint="#999999"
                        android:inputType="numberDecimal"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <!-- Arrow Down -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="8dp">

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/toggle_button_bg"
                    android:gravity="center"
                    android:text="⬇"
                    android:textColor="#333333"
                    android:textSize="24sp" />

            </LinearLayout>

            <!-- TO Gas Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <!-- Label row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To (Gas)"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <!-- Balance Section -->
                    <TextView
                        android:id="@+id/scrt_balance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance: ..."
                        android:textColor="#333333"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Input wrapper -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/desktop_bg"
                    android:padding="0dp">

                    <!-- Gas pump icon -->
                    <TextView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/card_rounded_bg"
                        android:gravity="center"
                        android:text="⛽"
                        android:textSize="24sp" />

                    <!-- SCRT label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:text="SCRT"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/expected_scrt_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="75dp"
                        android:layout_marginEnd="80dp"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:hint="0.0"
                        android:textColorHint="#999999"
                        android:inputType="numberDecimal"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <!-- Faucet Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/faucet_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/sky_blue"
                    android:enabled="false"
                    android:minWidth="0dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"
                    android:text="Faucet"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/faucet_info_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/card_rounded_bg"
                    android:gravity="center"
                    android:text="?"
                    android:textColor="@color/brand_blue"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Faucet Tooltip (initially hidden) -->
            <LinearLayout
                android:id="@+id/faucet_tooltip_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@color/desktop_bg"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registered users can get a free swap to gas once a week"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/faucet_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="✗ Not registered"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <!-- Swap for Gas Button -->
            <Button
                android:id="@+id/swap_for_gas_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#4caf50"
                android:enabled="false"
                android:text="Swap for Gas"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>