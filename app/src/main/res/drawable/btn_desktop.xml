<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/sidebar_hover" />
            <stroke android:width="2dp" android:color="@color/brand_blue" />
            <corners android:radius="8dp" />
            <padding android:left="12dp" android:top="10dp" android:right="12dp" android:bottom="10dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/sidebar_bg" />
            <stroke android:width="2dp" android:color="@color/brand_blue" />
            <corners android:radius="8dp" />
            <padding android:left="12dp" android:top="10dp" android:right="12dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>