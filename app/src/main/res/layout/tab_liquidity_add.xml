<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="60dp">

    <!-- Token Amount Input Group -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <!-- Label and Balance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/token_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TOKEN"
                android:textColor="#333333"
                android:textSize="16sp"
                tools:text="SCRT" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/token_balance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance: ..."
                    android:textColor="#333333"
                    android:textSize="14sp"
                    tools:text="Balance: 1,000.5" />

                <Button
                    android:id="@+id/token_max_button"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/button_max"
                    android:minWidth="0dp"
                    android:paddingHorizontal="10dp"
                    android:text="Max"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Input Wrapper -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_background">

            <ImageView
                android:id="@+id/token_input_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                tools:src="@drawable/ic_token_default" />

            <EditText
                android:id="@+id/token_amount_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="end"
                android:hint="Amount of TOKEN"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:paddingStart="50dp"
                android:textSize="16sp"
                tools:hint="Amount of SCRT" />

        </FrameLayout>

    </LinearLayout>

    <!-- ERTH Amount Input Group -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <!-- Label and Balance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ERTH"
                android:textColor="#333333"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/erth_balance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance: ..."
                    android:textColor="#333333"
                    android:textSize="14sp"
                    tools:text="Balance: 2,500.0" />

                <Button
                    android:id="@+id/erth_max_button"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/button_max"
                    android:minWidth="0dp"
                    android:paddingHorizontal="10dp"
                    android:text="Max"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Input Wrapper -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_background">

            <ImageView
                android:id="@+id/erth_input_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                tools:src="@drawable/ic_erth_logo" />

            <EditText
                android:id="@+id/erth_amount_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="end"
                android:hint="Amount of ERTH"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:paddingStart="50dp"
                android:textSize="16sp" />

        </FrameLayout>

    </LinearLayout>

    <!-- Add Liquidity Button -->
    <Button
        android:id="@+id/add_liquidity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_rounded_green"
        android:padding="15dp"
        android:text="Add Liquidity"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>