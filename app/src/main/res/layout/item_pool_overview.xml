<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pool_overview_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@drawable/pool_overview_box_normal"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/pool_info_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Pool Pair Info Section -->
        <LinearLayout
            android:id="@+id/pool_pair_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/token_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerInside"
                tools:src="@drawable/ic_token_default" />

            <LinearLayout
                android:id="@+id/pool_token_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/token_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="SCRT" />

                <TextView
                    android:id="@+id/pair_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#777777"
                    android:textSize="12sp"
                    tools:text="/ERTH" />

            </LinearLayout>

            <!-- Unbonding Lock Visualization -->
            <FrameLayout
                android:id="@+id/unbonding_lock"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="12dp"
                android:visibility="gone">

                <!-- Background circle -->
                <View
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@drawable/circle_unbonding_background" />

                <!-- Lock icon -->
                <ImageView
                    android:id="@+id/lock_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_lock"
                    android:tint="#4caf50" />

            </FrameLayout>

        </LinearLayout>

        <!-- Pool Compact Info Section -->
        <LinearLayout
            android:id="@+id/pool_compact_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="4">

            <!-- Rewards Info -->
            <LinearLayout
                android:id="@+id/rewards_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rewards_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="1,000.5" />

                <TextView
                    android:id="@+id/rewards_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rewards"
                    android:textColor="#777777"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Liquidity Info -->
            <LinearLayout
                android:id="@+id/liquidity_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/liquidity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="50,000.0" />

                <TextView
                    android:id="@+id/liquidity_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liquidity (ERTH)"
                    android:textColor="#777777"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Volume Info -->
            <LinearLayout
                android:id="@+id/volume_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/volume_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="25,000.0" />

                <TextView
                    android:id="@+id/volume_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volume (7d)"
                    android:textColor="#777777"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- APR Info -->
            <LinearLayout
                android:id="@+id/apr_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/apr_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="15.2%" />

                <TextView
                    android:id="@+id/apr_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APR"
                    android:textColor="#777777"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Pool Buttons Container -->
        <LinearLayout
            android:id="@+id/pool_buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp">

            <Button
                android:id="@+id/claim_button"
                android:layout_width="75dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_pool_claim"
                android:text="Claim"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/manage_button"
                android:layout_width="75dp"
                android:layout_height="36dp"
                android:background="@drawable/button_pool_manage"
                android:text="Manage"
                android:textColor="#4caf50"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>