<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.earthwallet.ui.pages.gasstation.GasStationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:text="Gas Station"
                    android:textColor="#333333"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Subtitle -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:text="Swap any token for SCRT (gas)"
                    android:textColor="#666666"
                    android:textSize="16sp" />

                <!-- FROM Token Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <!-- Label row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <!-- Balance/Viewing Key Section -->
                        <LinearLayout
                            android:id="@+id/from_balance_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/from_balance_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Balance: ..."
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <Button
                                android:id="@+id/from_max_button"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/card_rounded_bg"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:padding="8dp"
                                android:text="Max"
                                android:textColor="@color/brand_blue"
                                android:textSize="12sp"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/from_viewing_key_button"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/card_rounded_bg"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:text="Get Viewing Key"
                                android:textColor="@color/brand_blue"
                                android:textSize="11sp"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Input wrapper -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@color/desktop_bg"
                        android:padding="0dp">

                        <ImageView
                            android:id="@+id/from_token_logo"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:src="@drawable/ic_wallet" />

                        <Spinner
                            android:id="@+id/from_token_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:background="@android:color/transparent" />

                        <EditText
                            android:id="@+id/from_amount_input"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="75dp"
                            android:layout_marginEnd="120dp"
                            android:background="@android:color/transparent"
                            android:hint="0.0"
                            android:textColorHint="#999999"
                            android:inputType="numberDecimal"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"
                            android:textColor="#333333"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

                <!-- Arrow Down -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="8dp">

                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/toggle_button_bg"
                        android:gravity="center"
                        android:text="â¬‡"
                        android:textColor="#333333"
                        android:textSize="24sp" />

                </LinearLayout>

                <!-- TO Gas Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <!-- Label row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To (Gas)"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <!-- Balance Section -->
                        <TextView
                            android:id="@+id/scrt_balance_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance: ..."
                            android:textColor="#333333"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Input wrapper -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@color/desktop_bg"
                        android:padding="0dp">

                        <!-- Gas pump icon -->
                        <TextView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/card_rounded_bg"
                            android:gravity="center"
                            android:text="â›½"
                            android:textSize="24sp" />

                        <!-- SCRT label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:text="SCRT"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/expected_scrt_input"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="75dp"
                            android:layout_marginEnd="80dp"
                            android:background="@android:color/transparent"
                            android:enabled="false"
                            android:hint="0.0"
                            android:textColorHint="#999999"
                            android:inputType="numberDecimal"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"
                            android:textColor="#333333"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

                <!-- Faucet Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/faucet_button"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:backgroundTint="@color/brand_blue"
                        android:enabled="false"
                        android:minWidth="0dp"
                        android:paddingHorizontal="12dp"
                        android:text="Faucet"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/faucet_info_button"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/card_rounded_bg"
                        android:gravity="center"
                        android:text="?"
                        android:textColor="@color/brand_blue"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <!-- Faucet Tooltip (initially hidden) -->
                <LinearLayout
                    android:id="@+id/faucet_tooltip_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/desktop_bg"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registered users can get a free swap to gas once a week"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/faucet_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="âœ— Not registered"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:textStyle="italic" />

                </LinearLayout>

                <!-- Swap for Gas Button -->
                <Button
                    android:id="@+id/swap_for_gas_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:backgroundTint="#4caf50"
                    android:enabled="false"
                    android:text="Swap for Gas"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>