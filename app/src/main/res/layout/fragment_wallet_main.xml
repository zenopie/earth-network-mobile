<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.earthwallet.ui.activities.WalletActivity">

    <RelativeLayout
        android:id="@+id/wallet_activity_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:background="@android:color/white">

        <ScrollView
            android:id="@+id/content_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Wallet Name Header -->
                <TextView
                    android:id="@+id/wallet_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Wallet"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1e3a8a"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp" />

                <!-- Wallet Display Fragment Container -->
                <FrameLayout
                    android:id="@+id/wallet_display_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp" />

                <!-- Token Balances Fragment Container -->
                <FrameLayout
                    android:id="@+id/token_balances_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />


            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</FrameLayout>