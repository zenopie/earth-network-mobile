<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Info Display Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/address_box_bg"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <!-- Your Staked Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your Staked Amount:"
                android:textSize="14sp"
                android:textColor="#666666" />
            
            <TextView
                android:id="@+id/staked_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Your ERTH Balance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your ERTH Balance:"
                android:textSize="14sp"
                android:textColor="#666666" />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <TextView
                    android:id="@+id/erth_balance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />
                
                <Button
                    android:id="@+id/get_viewing_key_button"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Get Viewing Key"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/green_button_bg"
                    android:paddingHorizontal="12dp"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!-- Current APR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Current APR:"
                android:textSize="14sp"
                android:textColor="#666666" />
            
            <TextView
                android:id="@+id/current_apr_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00%"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Total Staked -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Staked:"
                android:textSize="14sp"
                android:textColor="#666666" />
            
            <TextView
                android:id="@+id/total_staked_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333" />
        </LinearLayout>
    </LinearLayout>

    <!-- Staking Rewards Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/address_box_bg"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Staking Rewards"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_marginBottom="12dp" />

        <!-- Staking Rewards Due -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Staking Rewards Due:"
                android:textSize="14sp"
                android:textColor="#666666" />
            
            <TextView
                android:id="@+id/staking_rewards_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 ERTH"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />
        </LinearLayout>

        <!-- Claim Rewards Button -->
        <Button
            android:id="@+id/claim_rewards_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Claim Rewards"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/green_button_bg"
            android:visibility="gone" />

        <!-- No Rewards Message -->
        <TextView
            android:id="@+id/no_rewards_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stake ERTH tokens to earn rewards"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>