<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingTop="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="40dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Shares Amount Input Group -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <!-- Label and Balance -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shares"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/staked_shares_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance: ..."
                        android:textColor="#333333"
                        android:textSize="14sp"
                        tools:text="Balance: 5,000" />

                    <Button
                        android:id="@+id/shares_max_button"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/button_max"
                        android:minWidth="0dp"
                        android:paddingHorizontal="10dp"
                        android:text="Max"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Input Wrapper -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background">

                <EditText
                    android:id="@+id/remove_amount_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:hint="Number of shares to remove"
                    android:inputType="numberDecimal"
                    android:padding="15dp"
                    android:textSize="16sp" />

            </FrameLayout>

        </LinearLayout>

        <!-- Remove Liquidity Button -->
        <Button
            android:id="@+id/remove_liquidity_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_rounded_green"
            android:padding="15dp"
            android:text="Remove Liquidity"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <!-- Info Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Note: Removing liquidity requires a 7-day unbonding period before you can claim your tokens."
            android:textColor="#666666"
            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>